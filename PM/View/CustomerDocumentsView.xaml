<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:PM.View"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    x:Class="PM.View.CustomerDocumentsView"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="_Resource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.DataContext>
        <Binding Path="CustomerDocumentsViewModel" Source="{StaticResource Locator}" />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <dxg:GridControl
            Grid.RowSpan="2"
            ItemsSource="{Binding DocumentFolders}">
            <dxg:GridControl.View>
                <dxg:TreeListView
                    ShowNodeImages="True"
                    ShowColumnHeaders="False"
                    ShowAutoFilterRow="True"
                    ShowVerticalLines="False"
                    KeyFieldName="ID"
                    ParentFieldName="ParentID"
                    ImageFieldName="FolderImage">
                </dxg:TreeListView>
            </dxg:GridControl.View>
            <dxg:GridColumn
                    Width="250"
                    MinWidth="250"
                    FieldName="FolderName" />
        </dxg:GridControl>
    </Grid>
</UserControl>
