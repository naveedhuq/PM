<dx:ThemedWindow
    x:Class="PM.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:view="clr-namespace:PM.View"
    Title="Portfolio Manager" Icon="portfolio-manager.ico" WindowState="Maximized">

    <dxmvvm:Interaction.Behaviors>
        <dx:DXSplashScreenService SplashScreenType="view:SplashScreenView" ShowSplashScreenOnLoading="True"/>
    </dxmvvm:Interaction.Behaviors>

    <ContentControl>
        <view:MasterView />
    </ContentControl>
</dx:ThemedWindow>
