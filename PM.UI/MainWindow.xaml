<dx:ThemedWindow
    x:Class="PM.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:view="clr-namespace:PM.UI.View"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    Width="525"
    Height="350"
    Title="Portfolio Manager" Closing="ThemedWindow_Closing">

    <dxmvvm:Interaction.Behaviors>
        <dx:DXSplashScreenService SplashScreenType="view:SplashScreenView" ShowSplashScreenOnLoading="True"/>
    </dxmvvm:Interaction.Behaviors>

    <ContentControl>
        <view:MasterView />
    </ContentControl>

</dx:ThemedWindow>
